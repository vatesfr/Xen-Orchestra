.form-group(ng-if = 'ctrl.active()')
  .input-group(style="max-width:30em")
    span.input-group-addon(ng-if = 'ctrl.key')
      | {{ ctrl.property.title || ctrl.key }}
      span.text-warning(ng-if = 'ctrl.isRequired()') &nbsp;*
    select.form-control(form = '{{ ctrl.form }}', ng-model = 'ctrl.model', ng-options = 'option for option in ctrl.property.enum', ng-required = 'ctrl.isRequired()')
      option(value = '') None
  span.help-block(ng-bind-html = 'ctrl.property.description | md2html')
