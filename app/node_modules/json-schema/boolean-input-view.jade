.form-inline(ng-if = 'ctrl.active()')
  .checkbox.small {{ ctrl.property.title || ctrl.key }}:&nbsp;
    label('style="color: #A7AFB0; margin-bottom:1em;"')
      i.fa.fa-2x(ng-class = '{"fa-toggle-on": ctrl.model, "fa-toggle-off": !ctrl.model}')
      input.hidden(type = 'checkbox', ng-model = 'ctrl.model')
